<!-- app/views/movies/edit.html.erb -->

<h1>Editar Comentário para <%= @movie.title %></h1>

<%= form_with model: @movie, local: true do |form| %>
  <div>
    <%= form.label :comment, "Comentário" %>
    <%= form.text_area :comment %>
  </div>

  <div>
    <%= form.submit "Atualizar Comentário" %>
  </div>
<% end %>

<%= link_to 'Voltar', movie_path(@movie) %>
