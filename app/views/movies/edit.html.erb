<!-- app/views/movies/edit.html.erb -->
<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Comentário para <%= @movie.title %></h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <%= form_with model: @movie, local: true do |form| %>
            <div class="form-group mb-3">
                <%= form.label :comment, "Comentário", class: "form-label" %>
                <%= form.text_area :comment, class: "form-control" %>
            </div>

            <div class="d-flex justify-content-between">
                <%= form.submit "Atualizar Comentário", class: "btn btn-primary" %>
                <%= link_to 'Voltar', movie_path(@movie), class: "btn btn-secondary" %>
            </div>
            <% end %>
        </div>
    </div>
</div>
