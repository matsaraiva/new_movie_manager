<h1>Filmes</h1>

<% if @movies.present? %>
  <ul>
    <% @movies.each do |movie| %>
      <li>
        <% if movie.is_a?(Hash) %>
          <%= movie["Title"] %> (<%= movie["Year"] %>)
          <%= button_to 'Adicionar aos Favoritos', movies_path(imdb_id: movie["imdbID"]), method: :post %>
        <% else %>
          <%= movie.title %>
        <% end %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>Nenhum filme encontrado.</p>
<% end %>

<hr>

