<!-- app/views/movies/new.html.erb -->
<div class="container mt-4">
    <h1 class="text-center mb-4">Adicionar Novo Filme</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <%= form_with url: search_movies_path, method: :get, local: true, class: "mb-4" do |form| %>
            <div class="form-group mb-3">
                <%= form.label :q, "Buscar Filme", class: "form-label" %>
                <%= form.text_field :q, class: "form-control" %>
            </div>
            <div class="form-group">
                <%= form.submit "Buscar", class: "btn btn-primary w-100" %>
            </div>
            <% end %>

            <% if @movies.present? %>
            <h2 class="text-center mb-4">Resultados da Busca</h2>
            <ul class="list-group">
                <% @movies.each do |movie| %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= movie['Title'] %> (<%= movie['Year'] %>)</span>
                    <%= button_to 'Adicionar aos Favoritos', movies_path(imdb_id: movie['imdbID']), method: :post, class: "btn btn-success btn-sm" %>
                </li>
                <% end %>
            </ul>
            <% else %>
            <p class="text-center">Nenhum filme encontrado.</p>
            <% end %>

            <%= link_to 'Voltar', root_path, class: "btn btn-secondary mt-4 w-100" %>
        </div>
    </div>
</div>
